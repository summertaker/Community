<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.summertaker.community.SettingsActivity"
    tools:showIn="@layout/settings_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin">

        <CheckBox
            android:id="@+id/cb_use_image_getter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onUseImageGetterClicked"
            android:text="@string/settings_use_image_getter" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
